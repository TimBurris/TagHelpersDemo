<div class="row">
    <div class="col-12 col-lg-6">
        <!-- Job Card -->
        <div class="card accent-card mb-3">
            <div class="card-header">Job</div>
            <div class="card-body">
                @*<div class="form-group has-validation">
                    <div class="form-floating">
